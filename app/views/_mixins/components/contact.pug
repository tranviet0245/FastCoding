mixin contact()
  section.contact
    .container-fuild
      +simple-pic('../images/contact-background.png', 'background', '../images/contact-background-m.png').background
      .content
        +heading('say ','hello').title
        p.description Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum
        form.contact-form(data-form-validation)
          .input-wrap
            input(type="email" name="email" placeholder="Your Email" required).input-form
          .input-wrap
            input(type="text" name="subject" placeholder="Subject" required).input-form
          .text-area
            textarea( name="message" placeholder="Your Message" required).input-form
          +btn('Hire us')(type="submit").btn-submit
          +list-social([
            '../images/facebook.png',
            '../images/twitter.png',
            '../images/google.png',
            '../images/ball.png',
            '../images/be.png',
          ])
